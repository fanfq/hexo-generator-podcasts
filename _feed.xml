<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:wfw="http://wellformedweb.org/CommentAPI/" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:sy="http://purl.org/rss/1.0/modules/syndication/" xmlns:slash="http://purl.org/rss/1.0/modules/slash/" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:rawvoice="http://www.rawvoice.com/rawvoiceRssModule/" xmlns:googleplay="http://www.google.com/schemas/play-podcasts/1.0">
	<channel>
		<title>
			{{title|xml_escape}}
		</title>
		<link href="{{feedUrl}}" rel="self" type="application/rss+xml" />
		<link>
			{{homepage}}
		</link>
		<description>
			{{description|xml_escape}}
		</description>
		<itunes:keywords>{{description|xml_escape}}</itunes:keywords>
		<itunes:explicit>no</itunes:explicit>
		<lastBuildDate>
			{{lastBuildDate}}
		</lastBuildDate>
		<language>
			{{language}}
		</language>
		<updatePeriod>
			{{updatePeriod}}
		</updatePeriod>
		<updateFrequency>
			{{updateFrequency}}
		</updateFrequency>
		<generator>
			https://fm.fanfq.com
		</generator>
		<image>
			<url>
				{{logo|get_url}}
			</url>
			<title>
				{{title|xml_escape}}
			</title>
			<link>
				{{homepage}}
			</link>
			<width>
				32
			</width>
			<height>
				32
			</height>
		</image>
		<summary>
			{{description|xml_escape}}
		</summary>
		<author>
			{{author}}
		</author>
		<explicit>
			{{explicit}}
		</explicit>
		
		<itunes:author>{{owner.name}}</itunes:author>
    <itunes:owner>
        <itunes:name>{{owner.name}}</itunes:name>
        <itunes:email>{{owner.email}}</itunes:email>
    </itunes:owner>
    
		<image href="{{logo|get_url}}" />
		<owner>
			<name>
				{{owner.name}}
			</name>
			<email>
				{{owner.email}}
			</email>
		</owner>
		<managingEditor>
			{{owner.email}} ({{owner.name}})
		</managingEditor>
		<copyright>
			{{owner.copyright}}
		</copyright>
		<subtitle>
			{{subtitle}}
		</subtitle>
		<itunes:subtitle>{{subtitle}}</itunes:subtitle>  
		<image>
			<title>
				{{title|xml_escape}}
			</title>
			<url>
				{{logo|get_url}}
			</url>
			<link>
				{{homepage}}
			</link>
		</image>
		<itunes:image href="{{logo|get_url}}"/>
		
		<!--
		{% for item in category %}
		<category text="{{item.top}}">
			{% if item.sub %}
			<category text="{{item.sub}}">
				{%endif%}
			</category>
			
		</category>
		{% endfor %}
		  -->
		<!-- 这个地方hardcode一下 -->
		<itunes:category text="Arts">
      <itunes:category text="Design"/>
      <itunes:category text="Visual Arts"/>
    </itunes:category>
    <itunes:category text="Technology">
      <itunes:category text="Tech News"/>
    </itunes:category>
		
		<frequency>
			Weekly
		</frequency>
		{% for episode in posts %}
		<item>
			<title>
				{{episode.title|xml_escape}}
			</title>
			<link>
				{{episode.permalink}}
			</link>
			<pubDate>
				{{episode.date| date_to_rfc822}}
			</pubDate>
			<guid isPermaLink="false">
				{{episode.permalink}}
			</guid>
			<comments>
				{{episode.permalink}}
			</comments>
			<commentRss>
				{{episode.permalink}}
			</commentRss>
			<comments>
				0
			</comments>
			<description><![CDATA[{{episode.description }}]]></description>
				
			<encoded>
				<![CDATA[{{episode.description }}]]>
			</encoded>
			<enclosure url="{{episode.media|get_url}}" length="{{episode.length}}" type="audio/mpeg" />
			<subtitle>
				<![CDATA[{{episode.description }}]]>
			</subtitle>
			<summary>
				<![CDATA[{{episode.description }}]]>
			</summary>
			<image href="{{episode.image|get_url}}" />
			<itunes:explicit>no</itunes:explicit>
			<itunes:duration>{{episode.duration}}</itunes:duration>
			<itunes:image href="{{episode.image|get_url}}" />
			<author>
			{{author}}
			</author>
			<duration>
				{{episode.duration}}
			</duration>
		</item>
		{% endfor %}
	</channel>
</rss>
